programa {
  funcao inicio() {
    
    //ex01
    cadeia nomeDoCarro = "fusca"
    escreva("O nome do carro é ", nomeDoCarro)

    //ex02
    cadeia nomeDoUsuario
    escreva("Qual seu nome? ")
    leia(nomeDoUsuario)

    escreva("Óla, ", nomeDoUsuario)

    //ex03
    cadeia nome
    inteiro idade

    escreva("Qual o seu nome? ")
    leia(nome)

    escreva("Qual a sua idade? ")
    leia(idade)

    escreva("Olá, ", nome, "! a sua idade é ", idade)
  }

    //ex04
    funcao retangulo() {

    inteiro baseRetangulo
    inteiro alturaRetangulo

    escreva("Qual a base do retângulo? ")
    leia(baseRetangulo)

    escreva("Qual a altura do retângulo? ")
    leia(alturaRetangulo)

    inteiro resultadoR = baseRetangulo * alturaRetangulo

    escreva("A area do retângulo é ", resultadoR)

    quadrado()

  }

  funcao quadrado() {
    
    inteiro ladoQuadrado

    escreva("Qual o lado do quadrado? ")
    leia(ladoQuadrado)

    inteiro resultadoQ = ladoQuadrado * ladoQuadrado

    escreva("A area do quadrado é ", resultadoQ)

    losango()

  }

  funcao losango() {

    inteiro diagonalMaiorL
    inteiro diagonalMenorL

    escreva("Qual a diagonal maior do losango? ")
    leia(diagonalMaiorL)

    escreva("Qual a diagonalMenor do losango? ")
    leia(diagonalMenorL)

    inteiro resultadoL = diagonalMaiorL * diagonalMenorL / 2

    escreva("A area do losango é ", resultadoL)

    trapezio()

  }

  funcao trapezio() {

    inteiro baseMaiorTrapezio
    inteiro baseMenorTrapezio
    inteiro alturaTrapezio

    escreva("Qual a base maior do trapezio? ")
    leia(baseMaiorTrapezio)

    escreva("Qual a base menor do trapezio? ")
    leia(baseMenorTrapezio)

    escreva("Qual a altura do trapezio? ")
    leia(alturaTrapezio)

    inteiro resultadoT = (baseMaiorTrapezio + baseMenorTrapezio) * alturaTrapezio / 2

    escreva("A area do Trapezio é ", resultadoT)

    paralelogramo()

  }

  funcao paralelogramo() {

    inteiro baseParalelogramo
    inteiro alturaParalelogramo

    escreva("Qual a base do paralelogramo? ")
    leia(baseParalelogramo)

    escreva("Qual a altura do paralelogramo")
    leia(alturaParalelogramo)

    inteiro resultadoP = baseParalelogramo * alturaParalelogramo

    escreva("A area do paralelogramo é ", resultadoP)

    triangulo()

  }

  funcao triangulo() {

    inteiro baseTriangulo
    inteiro alturaTriangulo

    escreva("Qual a base do triangulo? ")
    leia(baseTriangulo)

    escreva("Qual a altura do triangulo? ")
    leia(alturaTriangulo)

    inteiro resultadoTr = baseTriangulo * alturaTriangulo / 2 

    escreva("A area do triangulo é ", resultadoTr)

    circulo()
    
  }

  funcao circulo() {

    real pi = 3.14
    inteiro raioCirculo

    escreva("Qual o raio do circulo? ")
    leia(raioCirculo)

    inteiro resultadoC = pi * (raioCirculo * raioCirculo)

    escreva("A area do circulo é ", resultadoC)
  }
}
